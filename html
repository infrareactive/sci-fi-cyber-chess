<body>
    <h1>Science Fiction Chess | Cyber Chess</h1>

    <div class="mode-selection" id="modeSelection">
        <button class="mode-btn" onclick="selectMode('tutorial')">Tutorial Mode</button>
        <button class="mode-btn" onclick="selectMode('range')">Range Mode</button>
        <button class="mode-btn" onclick="selectMode('ai')">AI Battle</button>
        <button class="mode-btn" onclick="selectMode('twoPlayer')">Two-Player Battle</button>
    </div>

    <div class="ai-selection" id="aiSelection">
        <h3>Select AI Difficulty</h3>
        <button class="difficulty-btn" onclick="selectDifficulty(1)">Easy (1 Level)</button>
        <button class="difficulty-btn" onclick="selectDifficulty(3)">Medium (3 Levels)</button>
        <button class="difficulty-btn" onclick="selectDifficulty(5)">Hard (5 Levels)</button>
        <button class="return-btn" onclick="returnToMenu()">Return</button>
    </div>

    <div class="range-description" id="rangeDescription">
        <h3>Range Mode</h3>
        <p>Practice chess moves within a limited range. Perfect for learning piece movements!</p>
        <button class="return-btn" onclick="returnToMenu()">Return</button>
    </div>

    <div class="chessboard-container" id="chessboardContainer">
        <div class="chessboard" id="chessboard"></div>
    </div>

    <div class="control-panel" id="controlPanel">
        <button class="control-btn" onclick="restartGame()">Restart</button>
        <button class="control-btn" onclick="undoMove()">Undo</button>
        <button class="control-btn" onclick="showHint()">Hint</button>
    </div>

    <div class="promotion-panel" id="promotionPanel">
        <h3>Choose Promotion</h3>
        <div class="promotion-options">
            <button class="promotion-option" onclick="promotePawn('queen')">Queen</button>
            <button class="promotion-option" onclick="promotePawn('rook')">Rook</button>
            <button class="promotion-option" onclick="promotePawn('bishop')">Bishop</button>
            <button class="promotion-option" onclick="promotePawn('knight')">Knight</button>
        </div>
    </div>

    <script>
        let selectedSquare = null;
        let currentPlayer = 'white';
        let gameMode = '';
        let aiDifficulty = 0;
        let moveHistory = [];
        let boardState = [];

        const pieces = {
            'white': {
                'king': '♔',
                'queen': '♕',
                'rook': '♖',
                'bishop': '♗',
                'knight': '♘',
                'pawn': '♙'
            },
            'black': {
                'king': '♚',
                'queen': '♛',
                'rook': '♜',
                'bishop': '♝',
                'knight': '♞',
                'pawn': '♟'
            }
        };

        function selectMode(mode) {
            gameMode = mode;
            document.getElementById('modeSelection').style.display = 'none';
            
            if (mode === 'ai') {
                document.getElementById('aiSelection').style.display = 'block';
            } else if (mode === 'range') {
                document.getElementById('rangeDescription').style.display = 'block';
            } else {
                startGame();
            }
        }

        function selectDifficulty(level) {
            aiDifficulty = level;
            document.getElementById('aiSelection').style.display = 'none';
            startGame();
        }

        function returnToMenu() {
            document.getElementById('modeSelection').style.display = 'flex';
            document.getElementById('aiSelection').style.display = 'none';
            document.getElementById('rangeDescription').style.display = 'none';
            document.getElementById('chessboardContainer').style.display = 'none';
            document.getElementById('controlPanel').style.display = 'none';
        }

        function startGame() {
            document.getElementById('chessboardContainer').style.display = 'flex';
            document.getElementById('controlPanel').style.display = 'flex';
            initializeBoard();
            renderBoard();
        }

        function initializeBoard() {
            boardState = [
                ['♜', '♞', '♝', '♛', '♚', '♝', '♞', '♜'],
                ['♟', '♟', '♟', '♟', '♟', '♟', '♟', '♟'],
                [null, null, null, null, null, null, null, null],
                [null, null, null, null, null, null, null, null],
                [null, null, null, null, null, null, null, null],
                [null, null, null, null, null, null, null, null],
                ['♙', '♙', '♙', '♙', '♙', '♙', '♙', '♙'],
                ['♖', '♘', '♗', '♕', '♔', '♗', '♘', '♖']
            ];
        }

        function renderBoard() {
            const chessboard = document.getElementById('chessboard');
            chessboard.innerHTML = '';
            
            for (let row = 0; row < 8; row++) {
                for (let col = 0; col < 8; col++) {
                    const square = document.createElement('div');
                    square.className = `square ${(row + col) % 2 === 0 ? 'light' : 'dark'}`;
                    square.dataset.row = row;
                    square.dataset.col = col;
                    square.onclick = () => handleSquareClick(row, col);
                    
                    if (boardState[row][col]) {
                        const piece = document.createElement('div');
                        piece.className = 'piece';
                        piece.textContent = boardState[row][col];
                        piece.classList.add(isWhitePiece(boardState[row][col]) ? 'white' : 'black');
                        square.appendChild(piece);
                    }
                    
                    chessboard.appendChild(square);
                }
            }
        }

        function isWhitePiece(piece) {
            return ['♔', '♕', '♖', '♗', '♘', '♙'].includes(piece);
        }

        function handleSquareClick(row, col) {
            const clickedSquare = document.querySelector(`[data-row="${row}"][data-col="${col}"]`);
            
            if (selectedSquare) {
                // Try to move piece
                if (isValidMove(selectedSquare, {row, col})) {
                    movePiece(selectedSquare, {row, col});
                }
                clearSelection();
            } else {
                // Select piece
                if (boardState[row][col] && isCorrectPlayer(boardState[row][col])) {
                    selectedSquare = {row, col};
                    clickedSquare.classList.add('selected');
                    showValidMoves({row, col});
                }
            }
        }

        function isCorrectPlayer(piece) {
            return (currentPlayer === 'white' && isWhitePiece(piece)) ||
                   (currentPlayer === 'black' && !isWhitePiece(piece));
        }

        function isValidMove(from, to) {
            // Simplified move validation - just check if target square is empty or has opponent's piece
            const piece = boardState[from.row][from.col];
            const targetPiece = boardState[to.row][to.col];
            
            if (!piece) return false;
            if (targetPiece && isWhitePiece(piece) === isWhitePiece(targetPiece)) return false;
            
            return true; // Simplified for demo
        }

        function showValidMoves(position) {
            // Highlight valid moves (simplified for demo)
            for (let row = 0; row < 8; row++) {
                for (let col = 0; col < 8; col++) {
                    if (isValidMove(position, {row, col})) {
                        const square = document.querySelector(`[data-row="${row}"][data-col="${col}"]`);
                        square.classList.add('valid-move');
                    }
                }
            }
        }

        function movePiece(from, to) {
            const piece = boardState[from.row][from.col];
            const pieceElement = document.querySelector(`[data-row="${from.row}"][data-col="${from.row}"] .piece`);
            
            // Add moving animation
            if (pieceElement) {
                pieceElement.classList.add('moving');
                setTimeout(() => pieceElement.classList.remove('moving'), 500);
            }
            
            // Save move to history
            moveHistory.push({
                from: {row: from.row, col: from.col},
                to: {row: to.row, col: to.col},
                piece: piece,
                captured: boardState[to.row][to.col]
            });
            
            // Make the move
            boardState[to.row][to.col] = piece;
            boardState[from.row][from.col] = null;
            
            // Switch player
            currentPlayer = currentPlayer === 'white' ? 'black' : 'white';
            
            renderBoard();
        }

        function clearSelection() {
            document.querySelectorAll('.selected').forEach(sq => sq.classList.remove('selected'));
            document.querySelectorAll('.valid-move').forEach(sq => sq.classList.remove('valid-move'));
            selectedSquare = null;
        }

        function restartGame() {
            initializeBoard();
            currentPlayer = 'white';
            moveHistory = [];
            renderBoard();
        }

        function undoMove() {
            if (moveHistory.length > 0) {
                const lastMove = moveHistory.pop();
                boardState[lastMove.from.row][lastMove.from.col] = lastMove.piece;
                boardState[lastMove.to.row][lastMove.to.col] = lastMove.captured;
                currentPlayer = currentPlayer === 'white' ? 'black' : 'white';
                renderBoard();
            }
        }

        function showHint() {
            // Simple hint: highlight a random valid move
            const validMoves = [];
            for (let row = 0; row < 8; row++) {
                for (let col = 0; col < 8; col++) {
                    if (boardState[row][col] && isCorrectPlayer(boardState[row][col])) {
                        for (let targetRow = 0; targetRow < 8; targetRow++) {
                            for (let targetCol = 0; targetCol < 8; targetCol++) {
                                if (isValidMove({row, col}, {row: targetRow, col: targetCol})) {
                                    validMoves.push({from: {row, col}, to: {row: targetRow, col: targetCol}});
                                }
                            }
                        }
                    }
                }
            }
            
            if (validMoves.length > 0) {
                const hint = validMoves[Math.floor(Math.random() * validMoves.length)];
                const fromSquare = document.querySelector(`[data-row="${hint.from.row}"][data-col="${hint.from.col}"]`);
                const toSquare = document.querySelector(`[data-row="${hint.to.row}"][data-col="${hint.to.col}"]`);
                
                fromSquare.style.boxShadow = 'inset 0 0 30px rgba(255, 255, 0, 0.8)';
                toSquare.style.boxShadow = 'inset 0 0 30px rgba(255, 255, 0, 0.8)';
                
                setTimeout(() => {
                    fromSquare.style.boxShadow = '';
                    toSquare.style.boxShadow = '';
                }, 2000);
            }
        }

        function promotePawn(type) {
            // Handle pawn promotion
            document.getElementById('promotionPanel').style.display = 'none';
            // Implementation would go here
            renderBoard();
        }
    </script>
</body>
</html>
